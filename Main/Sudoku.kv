MainMenuManager:
    MainMenu:
    ClassicMenu:
    MultiplayerMenu:
    AccountMenu:
    BestTimesMenu:

    

<MainMenu>:
    name : "MainMenu"


    AnchorLayout:
        size_hint : 0.9, 0.1
        pos_hint : {"center_x": 0.5, "center_y":0.5}

        BoxLayout:

            Button:
                text: "Best Times"
                on_release: 
                    app.root.current = "BestTimes"
                    root.manager.transition.direction = "right"

            Button:
                text: "Classic"
                on_release: 
                    app.root.current = "Classic"
                    root.manager.transition.direction = "up"

            Button:
                text: "Multiplayer"
                on_release: 
                    app.root.current = "Multiplayer"
                    root.manager.transition.direction = "down"

            Button:
                text: "Account"
                on_release: 
                    app.root.current = "Account"
                    root.manager.transition.direction = "left"


<ClassicMenu>:
    name : "Classic"
    canvas.after:
        Rectangle:
            size: self.size
            source: "graphics\Sudoku_App_Border.png"
    FloatLayout:
        Label:
            text : "Classic"
        Button:
            text: "Return"
            size_hint : 0.07, 0.04
            pos_hint : {"x":0.005, "top": 0.99}
            on_release: 
                app.root.current = "MainMenu"
                root.manager.transition.direction = "down"

        BoxLayout:
            size_hint : 0.9, 0.1
            pos_hint : {"center_x": 0.5, "center_y":0.5}

            Button:
                text: "Easy"
                on_release: 
                    app.root.current = "BestTimes"
                    root.manager.transition.direction = "right"
            
            Button:
                text: "Normal"
                on_release: 
                    app.root.current = "BestTimes"
                    root.manager.transition.direction = "right"

            Button:
                text: "Hard"
                on_release: 
                    app.root.current = "BestTimes"
                    root.manager.transition.direction = "right"
            
            Button:
                text: "Ectra Hard"
                on_release: 
                    app.root.current = "BestTimes"
                    root.manager.transition.direction = "right"

<ClassicGame>:
    name : "ClassicGame"
    AnchorLayout:
        GridLayout:
            rows = 9
            cols = 9
            


